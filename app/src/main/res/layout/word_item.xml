<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giraffe"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/pronunciation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="/dʒɪˈrɑːf/"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/word"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cross_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGray"
        app:layout_constraintTop_toBottomOf="@+id/pronunciation"></androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/animal_lesson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cross_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>